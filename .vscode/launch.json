            "name": "MainExe GDB (Linux/Debug)",
            "type": "cppdbg",
            "request": "launch",
            "preLaunchTask": "build_OpenSteamClient",
            "program": "${workspaceFolder}/MainExe/bin/Debug/OpenSteamClient",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}/MainExe",
            "environment": [{"name": "AVALONIA_FORCE_NULL_SCALING_PROVIDER", "value": "1"}, {"name": "AVALONIA_NULL_SCALING_PROVIDER_SCALE", "value": "1.0"}],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                },
                {
                    "description": "Set Disassembly Flavor to Intel",
                    "text": "-gdb-set disassembly-flavor intel",
                    "ignoreFailures": true
                }
            ]
