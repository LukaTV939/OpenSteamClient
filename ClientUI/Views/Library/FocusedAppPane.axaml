<UserControl xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:ClientUI.ViewModels"
        xmlns:vml="using:ClientUI.ViewModels.Library"
        xmlns:views="using:ClientUI.Views"
        xmlns:c="using:ClientUI.Controls"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="ClientUI.Views.Library.FocusedAppPane"
        x:DataType="vml:FocusedAppPaneViewModel">

    <Design.DataContext>
        <!-- This only sets the DataContext for the previewer in an IDE,
             to set the actual DataContext for runtime, set the DataContext property in code (look at AvaloniaApp.axaml.cs) -->
        <vml:FocusedAppPaneViewModel/>
    </Design.DataContext>

    <DockPanel LastChildFill="True">
        <Grid HorizontalAlignment="Left" Width="990" Height="320" ClipToBounds="true" x:Name="Hero" DockPanel.Dock="Top" Margin="0" Background="{Binding Hero}">
            <TextBlock Height="140" HorizontalAlignment="Left" VerticalAlignment="Bottom" IsVisible="{Binding HasLogoAsText}" FontWeight="Thin" FontSize="72" Text="{Binding LogoAsText}"/>
            <Image HorizontalAlignment="{Binding LogoHorizontalAlignment}" VerticalAlignment="{Binding LogoVerticalAlignment}" Height="{Binding LogoHeight}" Width="{Binding LogoWidth}" Source="{Binding Logo}"/>
        </Grid>

        <StackPanel>
            <TextBlock Text="{Binding Name}"/>
            <Button c:Translatable.TranslationKey="{Binding PlayButtonLocalizationToken}" Command="{Binding PlayButtonAction}"/>
        </StackPanel>
    </DockPanel>
</UserControl>
